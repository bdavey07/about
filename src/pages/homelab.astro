---
import Layout from "@layouts/MoreLayout.astro";
---

<Layout>
  <section class="container mx-auto p-8">
    <h1 class="text-4xl font-bold mb-4 text-white">My Homelab</h1>
    <div class="mb-8">
      <img src="/images/server-rack.jpg" alt="Server Rack" class="w-full rounded-lg shadow-lg mb-4">
      <p class="text-neutral w-auto text-base md:pr-5">
        My server rack with various equipment.
      </p>
    </div>
    <div class="mb-8">
      <img src="/images/networking-setup.jpg" alt="Networking Setup" class="w-full rounded-lg shadow-lg mb-4">
      <p class="text-neutral w-auto text-base md:pr-5">
        Networking setup with switches and routers.
      </p>
    </div>
    <div class="mb-8">
      <img src="/images/homelab-workstation.jpg" alt="Homelab Workstation" class="w-full rounded-lg shadow-lg mb-4">
      <p class="text-neutral w-auto text-base md:pr-5">
        My workstation for managing the homelab.
      </p>
    </div>
    <div class="mb-8">
      <img src="/images/server-components.jpg" alt="Server Components" class="w-full rounded-lg shadow-lg mb-4">
      <p class="text-neutral w-auto text-base md:pr-5">
        Various components used in the servers.
      </p>
    </div>
  </section>
</Layout>